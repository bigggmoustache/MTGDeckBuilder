                @Html.DisplayNameFor(model => model.Blue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Green)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colorless)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedById)
